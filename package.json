{
  "name": "cerbos-actions-common",
  "description": "Shared logic for the Cerbos GitHub actions",
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b",
  "engines": {
    "node": "24.11.1",
    "pnpm": "10.23.0"
  },
  "files": [
    "dist/**/*"
  ],
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "all:parallel": "concurrently --group --prefix=none",
    "build": "rm -rf dist && tsc --project tsconfig.json",
    "eslint:run": "NODE_OPTIONS=--max-old-space-size=3072 eslint --max-warnings=0",
    "lint": "pnpm run all:parallel 'pnpm:lint:check:*'",
    "lint:check:eslint": "pnpm run eslint:run src tests",
    "lint:check:prettier": "prettier --check src tests",
    "lint:fix": "pnpm run lint:fix:eslint && pnpm run lint:fix:prettier",
    "lint:fix:eslint": "pnpm run eslint:run --fix src tests",
    "lint:fix:prettier": "prettier --write src tests",
    "test": "glob -c \"node --import tsx --no-warnings --test\" \"./tests/**/*.test.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cerbos/cerbos-actions-common.git"
  },
  "keywords": [
    "common",
    "actions"
  ],
  "author": "Cerbos",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/io": "2.0.0",
    "@actions/tool-cache": "2.0.2",
    "octokit": "5.0.5",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/node": "24.10.1",
    "concurrently": "9.2.1",
    "eslint": "9.39.1",
    "glob": "12.0.0",
    "globals": "16.5.0",
    "prettier": "3.6.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  }
}
